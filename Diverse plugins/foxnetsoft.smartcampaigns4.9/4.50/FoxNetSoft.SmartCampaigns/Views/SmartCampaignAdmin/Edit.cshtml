@model FoxNetSoft.Plugin.Misc.SmartCampaigns.Models.SmartCampaignModel
@{
    Layout = "_AdminLayout";
    //page title
    ViewBag.PageTitle = @T("Admin.FoxNetSoft.Plugin.Misc.SmartCampaigns.Edit").Text;

    NopHtml.SetActiveMenuItemSystemName("FoxNetSoft.SmartCampaigns.List");
}
<form asp-controller="SmartCampaignAdmin" asp-action="Edit" method="post" id="smartcampaign-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.FoxNetSoft.Plugin.Misc.SmartCampaigns.Edit") - @Model.Name
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Admin.FoxNetSoft.Plugin.Misc.SmartCampaigns.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="send-mass-email" class="btn bg-purple">
                @T("Admin.Promotions.Campaigns.SendMassEmail")
            </button>
            <button type="submit" name="exportemails" class="btn btn-success">
                <i class="fa fa-download"></i>
                @T("Admin.FoxNetSoft.Plugin.Misc.SmartCampaigns.Button.ExportEmails")
            </button>
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="smartcampaign-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                @T("Admin.Common.Delete")
            </span>
            @await Component.InvokeAsync("AdminWidget", new { widgetZone = "admin_smartcampaign_details_buttons", additionalData = Model.Id })
        </div>
    </div>
    @await Html.PartialAsync("~/Plugins/FoxNetSoft.SmartCampaigns/Views/SmartCampaignAdmin/_CreateOrUpdate.cshtml", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="smartcampaign-delete" />
