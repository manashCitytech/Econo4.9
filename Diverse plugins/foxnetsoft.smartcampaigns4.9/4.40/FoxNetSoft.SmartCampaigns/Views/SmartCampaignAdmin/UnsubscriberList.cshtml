@model FoxNetSoft.Plugin.Misc.SmartCampaigns.Models.UnsubscriberSearchModel
@using FoxNetSoft.Plugin.Misc.SmartCampaigns.Models
@{
    Layout = "_AdminLayout";

    //page title
    ViewBag.PageTitle = @T("Admin.FoxNetSoft.Plugin.Misc.SmartCampaigns.Unsubscriber.List").Text;

    Html.SetActiveMenuItemSystemName("FoxNetSoft.SmartCampaigns.Unsubscriber");
}
<nop-antiforgery-token />
<div class="content-header clearfix">
    <h1 class="float-left">
        @T("Admin.FoxNetSoft.Plugin.Misc.SmartCampaigns.Unsubscriber.List")
    </h1>
</div>
<div class="content">
    <div class="form-horizontal">
        <div class="cards-group">
            <div class="card card-default card-search" @(Model.HideStoresList ? Html.Raw("style=\"display:none\"") : null)>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <nop-label asp-for="SearchStoreId" />
                                </div>
                                <div class="col-md-8">
                                    <nop-select asp-for="SearchStoreId" asp-items="Model.AvailableStores" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="text-center col-12">
                            <button type="button" id="btnSearch" class="btn btn-primary btn-search">
                                <i class="fas fa-search"></i>
                                @T("Admin.Common.Search")
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card card-default">
                <div class="card-body">
                    @await Html.PartialAsync("Table", new DataTablesModel
               {
                   Name = "unsubscribers-grid",
                   UrlRead = new DataUrl("UnsubscriberList", "SmartCampaignAdmin", null),
                   UrlUpdate = new DataUrl("UnsubscriberUpdate", "SmartCampaignAdmin", null),
                   UrlDelete = new DataUrl("UnsubscriberDelete", "SmartCampaignAdmin", null),
                   SearchButtonId = "search-urlrewrites",
                   Length = Model.PageSize,
                   LengthMenu = Model.AvailablePageSizes,
                   Filters = new List<FilterParameter>
                            {
                                new FilterParameter(nameof(Model.SearchStoreId)),
                            },
                   ColumnCollection = new List<ColumnProperty>
                            {
                            new ColumnProperty(nameof(UnsubscriberModel.Store))
                            {
                                Title = T("Admin.FoxNetSoft.Plugin.Misc.SmartCampaigns.Unsubscriber.Fields.Store").Text,
                                Width = "100",
                                Visible = !Model.HideStoresList
                            },
                            new ColumnProperty(nameof(UnsubscriberModel.Email))
                            {
                                Title = T("Admin.FoxNetSoft.Plugin.Misc.SmartCampaigns.Unsubscriber.Fields.Email").Text,
                                Editable = true,
                                EditType = EditType.String
                            },
                            new ColumnProperty(nameof(UnsubscriberModel.Id))
                            {
                                Title = T("Admin.Common.Edit").Text,
                                Width = "100",
                                ClassName =  NopColumnClassDefaults.Button,
                                Render = new RenderButtonsInlineEdit()
                            },
                            new ColumnProperty(nameof(UnsubscriberModel.Id))
                            {
                                Title = T("Admin.Common.Delete").Text,
                                Width = "100",
                                ClassName =  NopColumnClassDefaults.Button,
                                Render = new RenderButtonRemove(T("Admin.Common.Delete").Text)
                            }
                   }
               })

                    <div class="card card-default no-margin">
                        <div class="card-header">
                            @T("Admin.Common.AddNewRecord")
                        </div>
                        <div class="card-body">
                            <div class="form-group row" @(Model.HideStoresList ? Html.Raw("style=\"display:none\"") : null)>
                                <div class="col-md-3">
                                    <nop-label asp-for="@Model.AddUnsubscriber.StoreId" />
                                </div>
                                <div class="col-md-9">
                                    <nop-select asp-for="@Model.AddUnsubscriber.StoreId" asp-items="@Model.AddUnsubscriber.AvailableStores" />
                                    <span asp-validation-for="@Model.AddUnsubscriber.StoreId"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="@Model.AddUnsubscriber.Email" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="@Model.AddUnsubscriber.Email" />
                                    <span asp-validation-for="@Model.AddUnsubscriber.Email"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-9 col-md-offset-3">
                                    <button type="button" id="addUnsubscriber" class="btn btn-primary">@T("Admin.Common.AddNewRecord")</button>
                                </div>
                            </div>
                        </div>
                        <script>
                    $(document).ready(function () {
                        $('#addUnsubscriber').click(function () {
                            $('#addUnsubscriber').attr('disabled', true);
                            var postData = {
                                StoreId: $("#@Html.IdFor(model => model.AddUnsubscriber.StoreId)").val(),
                                Email: $("#@Html.IdFor(model => model.AddUnsubscriber.Email)").val()
                            };
                            addAntiForgeryToken(postData);

                            $.ajax({
                                cache: false,
                                type: "POST",
                                url: "@Html.Raw(Url.Action("UnsubscriberInsert", "SmartCampaignAdmin"))",
                                data: postData,
                                success: function (data, textStatus, jqXHR) {
                                    if (data.Result) {
                                        //reload grid
                                        updateTable('#unsubscribers-grid');

                                        //clear input value
                                        $("#@Html.IdFor(model => model.AddUnsubscriber.Email)").val('');
                                    } else {
                                        //display errors if returned
                                        display_nop_error(data);
                                    }
                                },
                                complete: function (jqXHR, textStatus) {
                                    $('#addUnsubscriber').attr('disabled', false);
                                }
                            });
                        });
                    });
                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
