@model FileExtensionImageModel
@{
    Layout = AdminViewLocations.AdminLayoutViewPath;

    NopHtml.SetActiveMenuItemSystemName("SevenSpikes.Plugins.NopAttachments.Admin.Submenus.ManageDefaultImagesForFileAttachments");
}

<form method="post" id="file-extension-image-form">

    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("SevenSpikes.Plugins.NopAttachments.Admin.Entities.FileExtensionImage.EditFileExtensionImageDetails")
            <small><i class="fa fa-arrow-circle-left"></i> - @Model.Name <a asp-action="List">@T("SevenSpikes.Plugins.NopAttachments.Admin.Entities.FileExtensionImage.BackToList")</a></small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn bg-primary save-settings-button">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-primary save-settings-button">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            @if (Model.Id > 0)
            {
                <span id="file-extension-image-delete" class="btn bg-danger">
                    <i class="far fa-trash-alt"></i>
                    @T("Admin.Common.Delete")
                </span>
            }
        </div>
    </div>
    @{ await Html.RenderPartialAsync(AdminViews.CreateOrUpdate, Model); }
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="file-extension-image-delete" />