
<script asp-location="Footer">
    $(function() {
        $('#eu-cookie-bar-notification').show();

        $('#eu-cookie-ok').on('click', function () {
            var postData = {};
            addAntiForgeryToken(postData);

            $.ajax({
                cache: false,
                type: "POST",
                data: postData,
                url: "@Url.RouteUrl(NopRouteNames.Ajax.EU_COOKIE_LAW_ACCEPT)",
                dataType: "json",
                success: function (data, textStatus, jqXHR) {
                    $('#eu-cookie-bar-notification').hide();
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert('Cannot store value');
                }
            });
        });

        $('#eu-cookie-cancel').on('click', function () {
            debugger;
             var postCancelData = {};
            addAntiForgeryToken(postCancelData);
            
            $.ajax({
                cache: false,
                type: "POST",
                data: postCancelData,
                url: "@Url.RouteUrl(NopRouteNames.Ajax.EU_COOKIE_LAW_DECLINE)",
                dataType: "json",
                success: function (data, textStatus, jqXHR) {
                    $('#eu-cookie-bar-notification').hide();
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert('Cannot store value');
                }
            });
        });
    });
</script>
<div id="eu-cookie-bar-notification" class="eu-cookie-bar-notification">
    <div class="content">
        <div class="text">@T("EUCookieLaw.Description2")</div>
        <div class="buttons-more">
            <button type="button" class="ok-button button-1" id="eu-cookie-ok">@T("Common.OK")</button>
            <button type="button" class="ok-button button-1" id="eu-cookie-cancel">@T("Common.decline")</button>
            <a class="learn-more" href="@await NopUrl.RouteTopicUrlAsync("privacyinfo")">@T("EUCookieLaw.LearnMore")</a>
        </div>
    </div>
</div>