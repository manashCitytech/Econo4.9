@model bool
@inject AdminAreaSettings adminAreaSettings
@{
    Layout = AdminViewLocations.AdminLayoutViewPath;

    var defaultGridPageSize = adminAreaSettings.DefaultGridPageSize;
    var gridPageSizes = adminAreaSettings.GridPageSizes;

    NopHtml.SetActiveMenuItemSystemName("SevenSpikes.Plugins.NopAttachments.Admin.Submenus.ManageDefaultImagesForFileAttachments");
}

<div class="content-header clearfix">
    <h1 class="float-left">
        @T("SevenSpikes.Plugins.NopAttachments.Admin.Entities.FileExtensionImage")
    </h1>
    <div class="float-right">
        <a href="Create" class="btn bg-primary">
            <i class="fa fa-plus-square"></i>
            @T("SevenSpikes.Plugins.NopAttachments.Admin.Entities.FileExtensionImage.AddNew")
        </a>
    </div>
</div>

<nop-antiforgery-token />

<section class="content">
    <div class="form-horizontal">
        @await Html.TrialMessageAsync(Model, Plugin.Name, Plugin.UrlInStore)
        <div class="cards-group">
            <div class="card card-default">
                <div class="card-body">
                    @{ 
                        await Html.RenderPartialAsync("Table", new DataTablesModel
                        {
                            Name = "file-attachments-grid",
                            UrlRead = new DataUrl("List", "FileExtensionImageAdmin", null),
                            UrlDelete = new DataUrl("DeleteFileExtensionImage", "FileExtensionImageAdmin", null),
                            Length = defaultGridPageSize,
                            LengthMenu = gridPageSizes,
                            ColumnCollection = new List<ColumnProperty>
                            {
                                new ColumnProperty(nameof(FileExtensionImageModel.Name))
                                {
                                    Title = T("SevenSpikes.Plugins.NopAttachments.Admin.Entities.FileExtensionImage.Name").Text,
                                    Width = "300"
                                },
                                new ColumnProperty(nameof(FileExtensionImageModel.FileExtensions))
                                {
                                    Title = T("SevenSpikes.Plugins.NopAttachments.Admin.Entities.FileExtensionImage.FileExtensions").Text,
                                    Width = "300"
                                },
                                new ColumnProperty(nameof(FileExtensionImageModel.Id))
                                {
                                    Render = new RenderCustom("renderEditButton"),
                                    Width = "30"
                                },
                                new ColumnProperty(nameof(FileExtensionImageModel.Id))
                                {
                                    Render = new RenderButtonRemove(T("Admin.Common.Delete").Text),
                                    Width = "30"
                                }
                            }
                        });
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<script>

    function renderEditButton(data, type, row, meta) {

        return '<a class="btn btn-default" href="Edit/' + data + '" title="@T("Admin.Common.Edit")">' +
            '<i class="fas fa-pencil-alt"></i>' +
            '@T("Admin.Common.Edit")' +
            '</a>';
    }
</script>