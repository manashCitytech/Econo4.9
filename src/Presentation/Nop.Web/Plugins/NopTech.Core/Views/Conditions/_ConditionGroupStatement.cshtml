@model ConditionStatementSearchModel

<div class="card">
    <div class="card-header">
        <button type="button" class="btn btn-default mr-2" onclick="addRecord(@Model.GroupId)"><i class="fas fa-plus-square" style="color: green;"></i>@T("Noptech.Core.Conditions.Button.AddRecord")</button>
        <button type="button" class="btn btn-default" onclick="deleteGroup(@Model.GroupId)"><i class="fas fa-window-close" style="color: red;"></i>@T("Noptech.Core.Conditions.Button.DeleteConditionGroup")</button>
    </div>
    <div id="small-window-@Model.GroupId"></div>
    <div class="card-body">
        @await Html.PartialAsync("Table", new DataTablesModel
   {
       Name = "condition-group-" + Model.GroupId,
       UrlRead = new DataUrl("GroupStatementsList", "NopTechCondition",
        new RouteValueDictionary { [nameof(Model.GroupId)] = Model.GroupId }),
       UrlDelete = new DataUrl("DeleteConditionGroupRecord", "NopTechCondition", null),
       Length = Model.PageSize,
       LengthMenu = Model.AvailablePageSizes,
       ColumnCollection = new List<ColumnProperty>
        {
        new ColumnProperty(nameof(ConditionStatementModel.ConditionTypeName))
        {
        Title = T("Noptech.Core.Conditions.Fields.ConditionType").Text,
        Width = "100",
        ClassName =  NopColumnClassDefaults.CenterAll
        },
        new ColumnProperty(nameof(ConditionStatementModel.ConditionPropertyName))
        {
        Title = T("Noptech.Core.Conditions.Fields.ConditionProperty").Text,
        Width = "150",
        ClassName =  NopColumnClassDefaults.CenterAll,
        },
        new ColumnProperty(nameof(ConditionStatementModel.OperatorTypeName))
        {
        Title = T("Noptech.Core.Conditions.Fields.OperatorType").Text,
        Width = "150",
        ClassName =  NopColumnClassDefaults.CenterAll,
        },
        new ColumnProperty(nameof(ConditionStatementModel.Value))
        {
        Title = T("Noptech.Core.Conditions.Fields.Value").Text,
        Width = "150",
        ClassName =  NopColumnClassDefaults.CenterAll,
        },
        new ColumnProperty(nameof(ConditionStatementModel.Id))
        {
        Title = T("Admin.Common.Edit").Text,
        Width = "50",
        ClassName =  NopColumnClassDefaults.CenterAll,
        Render = new RenderButtonCustom("btn btn-default inventory-transfer-update-btn", "Edit")
        {
        OnClickFunctionName = "editRecord"
        }
        },
        new ColumnProperty(nameof(ConditionStatementModel.Id))
        {
        Title = T("Admin.Common.Delete").Text,
        Width = "100",
        Render = new RenderButtonRemove(T("Admin.Common.Delete").Text),
        ClassName = NopColumnClassDefaults.CenterAll
        }
        }
   })
    </div>
</div>