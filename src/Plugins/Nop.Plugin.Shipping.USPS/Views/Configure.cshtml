@model USPSShippingModel
@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="ShippingUSPS" asp-action="Configure" method="post">
    <div class="cards-group">
        <div class="card card-default">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="UseSandbox" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="UseSandbox" />
                        <span asp-validation-for="UseSandbox"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="ConsumerKey" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ConsumerKey" />
                        <span asp-validation-for="ConsumerKey"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="ConsumerSecret" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ConsumerSecret" asp-required="true" html-attributes="@(new { value = Model.ConsumerSecret })" />
                        <span asp-validation-for="ConsumerSecret"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="AdditionalHandlingCharge" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="AdditionalHandlingCharge" />
                        <span asp-validation-for="AdditionalHandlingCharge"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="SelectedCarrierDomesticServices" />
                    </div>
                    <div class="col-md-9">
                        <nop-select asp-for="SelectedCarrierDomesticServices" asp-items="Model.AvailableDomesticServices" asp-multiple="true" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="SelectedCarrierInternationalServices" />
                    </div>
                    <div class="col-md-9">
                        <nop-select asp-for="SelectedCarrierInternationalServices" asp-items="Model.AvailableInternationalServices" asp-multiple="true" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="SelectedProcessingCategory" />
                    </div>
                    <div class="col-md-9">
                        <nop-select asp-for="SelectedProcessingCategory" asp-items="Model.AvailableProcessingCategory" asp-multiple="true" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="TrackingEnabled" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="TrackingEnabled" />
                        <span asp-validation-for="TrackingEnabled"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-9 offset-3">
                        <input type="submit" name="save" class="btn bg-primary" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<script>
    $(function() {
        $("#@Html.IdFor(m => m.SelectedCarrierDomesticServices)").select2()
        $("#@Html.IdFor(m => m.SelectedCarrierInternationalServices)").select2()
        $("#@Html.IdFor(m => m.SelectedProcessingCategory)").select2()
    });
</script>